{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C Project",
            "type": "cppbuild",
            "command": "gcc",
            "args": [
                "-g",
                "-std=c11",
                "${workspaceFolder}/Project/CSV_C/CSV.c",
                "${workspaceFolder}/Project/CSV_C/CSV_test.c",
                "-o",
                "${workspaceFolder}/Project/CSV_C/main_c.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Project/CSV_C"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Компіляція C частини"
        },
        {
            "label": "Build CPP Project",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "${workspaceFolder}/Project/CSV_CPP/CSV.cpp",
                "${workspaceFolder}/Project/CSV_CPP/CSV_test.cpp",
                "-o",
                "${workspaceFolder}/Project/CSV_CPP/main_cpp.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Project/CSV_CPP"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Компіляція C++ частини"
        },
        {
            "label": "Build Cross Test (Final)",
            "type": "shell",
            "command": "gcc -c \"${workspaceFolder}/Project/CSV_C/CSV.c\" -o \"${workspaceFolder}/Project/CSV_C/CSV.o\" && g++ -g -std=c++17 \"${workspaceFolder}/Project/CSV_CPP/CSV_cross_test.cpp\" \"${workspaceFolder}/Project/CSV_CPP/CSV.cpp\" \"${workspaceFolder}/Project/CSV_C/CSV.o\" -o \"${workspaceFolder}/Project/CSV_CPP/cross_test.exe\"",
            "options": {
                "cwd": "${workspaceFolder}/Project/CSV_CPP",
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Правильна роздільна компіляція C та C++"
        }
    ]
}